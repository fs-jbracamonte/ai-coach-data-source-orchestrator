{
  "comment": "Shared defaults for configuration. This file is intended to be merged first, before team base configs and any report-specific overrides. It provides common transcript settings and date format examples. For global transcript team filtering, set env TRANSCRIPTS_GLOBAL_TEAM_FILTER=true (applies minimumTeamMembersRequired to ALL folders).",
  "examples": {
    "dateFormat": "YYYY-MM-DD",
    "dailyReports": {
      "report_date_start": "2025-01-01",
      "report_date_end": "2025-01-07"
    },
    "transcripts": {
      "dateFilter": {
        "startDate": "2025-01-01",
        "endDate": "2025-01-07",
        "enabled": true
      }
    }
  },
  "transcripts": {
    "enableContentPreFilter": false,
    "preFilterRetries": 3,
    "preFilterTimeout": 5000,
    "convertToMarkdown": true,
    "sanitizeFilenames": true,
    "organizeByFolder": false,
    "downloadDir": "./transcripts/downloads",
    "markdownOutputDir": "./transcripts/markdown-output",
    "filterByTeamMembers": false,
    "minimumTeamMembersRequired": 1,
    "teamMappingFile": "datasource-generator/team-name-mapping.json"
  },
  "slack": {
    "sanitization": {
      "enable": true,
      "redactCodeBlocks": true,
      "redactInlineCode": true,
      "maskSecrets": true,
      "promptDenylistFile": "configs/shared/prompt-denylist.json",
      "promptDenylist": [
        "ignore previous instructions",
        "disregard previous instructions",
        "act as system",
        "begin system prompt",
        "role: system"
      ]
    }
  },
  "outputFilenames": {
    "weekly": "datasource_weekly_{project}.py",
    "team": "datasource_{project}_team.py",
    "oneOnOne": "datasource_{memberShort}.py"
  }
}

